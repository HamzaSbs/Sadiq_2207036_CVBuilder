<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sadiq_2207036_cvbuilder.cvController"
            style="-fx-padding: 20; -fx-background-color: linear-gradient(to bottom right, #3b82f6, #06b6d4);">

    <top>
        <Label text="Create New CV"
               style="-fx-font-size: 26; -fx-font-weight: bold; -fx-padding: 10 0 20 0;"/>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="18">
            <HBox alignment="CENTER" spacing="18">
                <ImageView fx:id="profileImageView" fitWidth="100" fitHeight="100" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, #00000033, 6, 0.3, 1, 1); -fx-background-radius: 50; -fx-border-radius: 50; -fx-background-color: white;"/>
                <Button text="Upload Photo" fx:id="uploadPhotoButton" onAction="#uploadPhoto" style="-fx-background-color: #06b6d4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
            </HBox>
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>

                <Label text="Full Name:" GridPane.rowIndex="0"/>
                <TextField fx:id="fullName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="1"/>
                <TextField fx:id="email" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Phone:" GridPane.rowIndex="2"/>
                <TextField fx:id="phone" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Address:" GridPane.rowIndex="3"/>
                <TextField fx:id="address" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Education:" GridPane.rowIndex="4"/>
                <TextArea fx:id="education" prefRowCount="3"
                          GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Skills:" GridPane.rowIndex="5"/>
                <TextArea fx:id="skills" prefRowCount="3"
                          GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Experience:" GridPane.rowIndex="6"/>
                <TextArea fx:id="experience" prefRowCount="3"
                          GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label text="Projects:" GridPane.rowIndex="7"/>
                <TextArea fx:id="projects" prefRowCount="3"
                          GridPane.rowIndex="7" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>
    </center>

    <bottom>
        <Button text="Generate CV"
                onAction="#generateCV"
                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20; -fx-background-radius: 8;"
                BorderPane.alignment="CENTER"
        />
    </bottom>

</BorderPane>
